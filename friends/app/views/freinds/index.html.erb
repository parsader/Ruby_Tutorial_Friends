<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @freinds.each do |freind| %>
      <tr>
        <td><%= freind.first_name %></td>
        <td><%= freind.last_name %></td>
        <td><%= freind.email %></td>
        <td><%= freind.phone %></td>
        <td><%= freind.twitter %></td>
        <td><%= freind.user_id %></td>
        <td><%= link_to 'Show', freind, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_freind_path(freind), class: "btn btn-sm btn-warning" %></td>
        <td><%= link_to 'Destroy', freind, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

